%h2 商品出品
= form_for @item do |f|
  .field
    = f.label "商品名"
    = f.text_field :name, autofocus: true, autocomplete: "name"
  .field
    = f.label "商品説明"
    = f.text_field :text, autofocus: true, autocomplete: "text"
  .field
    = f.label "ブランド"
    = f.text_field :brand, autofocus: true, autocomplete: "brand"
  .field
    = f.label "カテゴリー"
    = f.text_field :prefecture, autofocus: true, autocomplete: "prefecture"
  .field
    = f.label "商品の状態"
    = f.text_field :item_status, autofocus: true, autocomplete: "item_status"
  .field
    = f.label "配送料の負担"
    = f.text_field :delivery_charge, autofocus: true, autocomplete: "delivery_charge"
  .field
    = f.label "発送元の地域"
    = f.text_field :delivery_area, autofocus: true, autocomplete: "delivery_area"
  .field
    = f.label "発送までの日数"
    = f.text_field :delivery_days, autofocus: true, autocomplete: "delivery_days"
  .field
    = f.label "販売価格"
    = f.text_field :price, autofocus: true, autocomplete: "price"
  .actions
    = f.submit "出品する"