.input_form
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.email_field :email, class: "inputbox-full",placeholder: "メールアドレス", autofocus: true, autocomplete: "email"
    .field
      = f.password_field :password, class: "inputbox-full",placeholder: "パスワード", autocomplete: "current-password"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label "パスワードを記憶する"
    .actions
      = f.submit "ログイン", class: "btn red"
.links
  = render "devise/shared/links"