%h2 STEP 2
= form_for @profile do |f|
  -# = render "profiles/shared/error_messages", resource: resource
  .field
    = f.label "お名前(全角)"
    = f.text_field :last_name, autofocus: true, autocomplete: "last_name"
    = f.text_field :first_name, autofocus: true, autocomplete: "first_name"
  .field
    = f.label "お名前カナ(全角)"
    = f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana"
    = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana"
  .field
    = f.label :birthday
    = raw sprintf(f.date_select(:birthday, prompt:"--", use_month_numbers: true, start_year: (Time.now.year), end_year: (Time.now.year - 50), date_separator: '%s'), '年 ', '月 ') + '日'
  .field
    = f.label "電話番号"
    = f.telephone_field :phone_number, autofocus: true, autocomplete: "phone_number"
  .actions
    = f.submit "次へ"
