.title
  %h2 STEP 2
.input_form
  = form_for @profile do |f|
    .field
      = f.label "お名前(全角)"
      %br/
      = f.text_field :last_name, class: "inputbox-half", autofocus: true, autocomplete: "last_name"
      = f.text_field :first_name, class: "inputbox-half", autofocus: true, autocomplete: "first_name"
    .field
      = f.label "お名前カナ(全角)"
      %br/
      = f.text_field :last_name_kana, class: "inputbox-half", autofocus: true, autocomplete: "last_name_kana"
      = f.text_field :first_name_kana, class: "inputbox-half", autofocus: true, autocomplete: "first_name_kana"
    .field
      = f.label "生年月日"
      %br
      = raw sprintf(f.date_select(:birthday, prompt:"", use_month_numbers: true, start_year: (Time.now.year), end_year: (Time.now.year - 50), date_separator: '%s'), '年 ', '月 ') + '日'
    .field
      = f.label "電話番号"
      %br/
      = f.telephone_field :phone_number, class: "inputbox-full", autofocus: true, autocomplete: "phone_number"
    .actions
      = f.submit "次へ",  class: "btn red"
